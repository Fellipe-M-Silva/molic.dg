start Welcome {
  u: "Qual é o seu nome?" -> Login
}

scene Login {
  topic: "Fazer login"
  
  and {
    subtopic: "Seleção de método"
    u: "Qual método prefere?" if "não autenticado"
    
    or {
      u: "Email" -> EmailAuth why: "Autentica por email"
      u: "Senha" -> PasswordAuth why: "Autentica por senha"
      
      xor {
        u: "Biometria" -> BioAuth why: "Autentica biometricamente"
      }
    }
  }
  
  u: "Login bem-sucedido" -> Dashboard why: "Acesso concedido"
}

scene EmailAuth {
  topic: "Autenticação por email"
  d: "Digite seu email" why: "Pedindo credencial do usuário"
  u: "Email informado" -> Verification
}

scene PasswordAuth {
  topic: "Autenticação por senha"
  d: "Digite sua senha"
  u: "Senha informada" -> Verification
}

scene BioAuth {
  topic: "Autenticação biométrica"
  d: "Posicione seu dedo"
  anon: "Aguardando leitura..." -> Verification
}

scene Verification {
  topic: "Verificação"
  d: "Por favor aguarde..." -> Dashboard
}

scene Dashboard {
  topic: "Painel principal"
}

end fim



